{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "lib": ["DOM", "ESNEXT"],
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "ESNEXT",
    "moduleResolution": "node",
    "target": "ESNEXT",
    "types": ["svelte"],
    "skipLibCheck": true
  }
}
